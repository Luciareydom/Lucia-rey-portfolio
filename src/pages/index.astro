---
import AcademicCap from "../components/iconos/AcademicCap.astro";
import Briefcase from "../components/iconos/Briefcase.astro";
import MainLayout from "../layouts/MainLayout.astro";

---
<MainLayout titulo="Portafolio de Lucía">
	<h2>Lucía Rey Domínguez</h2>
	<div class="container">
	
		<aside class="general-info">
			<img src="/foto.png" class="foto" alt="Lucía Rey Domínguez">
	
			<ul>
				<li>
					<h4>Información personal</h4>
					<p>Santiago de Compostela</p>
					<p>lreydom.appventurers@gmail.com</p>
				</li>
				<li>
					<h4>Idiomas</h4>
					<p>Castellano, gallego: nativo</p>
					<p>Inglés: C1 Cambridge</p>
				</li>
			</ul>
		</aside>
	
		<section class="main-content">

			<section class="education">
				<h3><AcademicCap className="academic-icon" />Formación</h3>
					<ul>
						<li>
							<h4><time>2023</time>Master de Profesorado. Especialidad de Ciencias Experimentales</h4>
							<p>Facultad de Biología | Universidad de Vigo</p>
						</li>
						<li>
							<h4><time>2021</time>Grado en Geología</h4>
							<p>Facultad de Geología | Universidad de Oviedo</p>
						</li>
					</ul>
			</section>
	
			<section class="experience">
				
				<h3><Briefcase className="briefcase-icon"/>Experiencia laboral</h3>
					<ul>
						<li>
							<h4><time>2020</time>Facultad de Geología, Universidad de Oviedo</h4>
							<p>Beca de Colaboración. Tratamiento de datos y trabajo de laboratorio.</p>
						</li>
						<li>
							<h4><time>2019</time>Soluciones y Proyectos de Información SL.</h4>
							<p>Prácticas. Uso del programa de tratamiento de datos geográficos QGIS y Excel.</p>
						</li>
					</ul>
			</section>
		</section>
	</div>

</MainLayout>

<style>
	img {
		border-radius: 100%;
	}

	h2 {
		margin-left: 1.5rem;
		/* text-align: center; */
	}

	h3 {
		display: flex;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	h4 {
		margin-bottom: 0;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	p {
		margin-left: 1rem;
	}

	time {
		font-weight: 400;
	}


	aside {
		padding: 1rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	div {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 3rem;
		flex-wrap: wrap;
		
	}

	@media (max-width: 300px) {
		h2 {
			margin-left: 0;
			font-size: 1.3em;
		}

		p{
			margin-left: 0;
		}

		ul {
		padding-left: 0;
	}
	}

</style>